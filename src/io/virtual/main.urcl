!Scal_Putc
.Scal_Putc
LLOD R11 R3 R9
.Scal_Putc_SkipGet
//store in buffer
BSL R2 R20 12
BSL R7 R19 8
ADD R2 R7 R2

BRE .Scal_Putc_NewLine R11 '\n'

BSR R6 R18 3
LOD R7 .IO_Buffer_Addr
ADD R7 R7 R6
BSR R6 R13 4
BSR R3 @WIDTH 3
MLT R6 R6 R3
ADD R7 R7 R6

ADD R2 R11 R2
STR R7 R2

BSL R11 R11 3
ADD R11 R11 !IO_Font
PSH R13
CAL .PrintChar
POP R13
ADD R18 R18 8
BRL .Scal_Putc_End R18 @WIDTH
MOV R18 R0
ADD R13 R13 16
BRL .Scal_Putc_End R13 @HEIGHT
.Scal_Putc_Scroll
LOD R7 .IO_Buffer_Addr
BSR R3 @WIDTH 3
//scroll
ADD R2 R7 R3
LOD R3 .IO_Buffer_End_Addr
.Scal_Putc_ScrollLoop
CPY R7 R2
INC R7 R7
INC R2 R2
BLE .Scal_Putc_ScrollLoop R2 R3
CAL .PrintContents
SUB R13 @HEIGHT 16
.Scal_Putc_End
OUT %BUFFER 2
RET

.Scal_Putc_NewLine
MOV R18 R0
ADD R13 R13 16
BGE .Scal_Putc_Scroll R13 @HEIGHT
RET

