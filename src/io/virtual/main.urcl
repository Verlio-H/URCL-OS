INC R13 R13
OUT %Y R13
MOV R12 R18
JMP .PrintChar_LoopLoop
.PrintChar_LoopLoop_End
INC R13 R13
INC R14 R14
MOV R12 R18
BNE .PrintChar_Loop R14 8
RET